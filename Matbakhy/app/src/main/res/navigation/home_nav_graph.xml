<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.matbakhy.presentation.Meals.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mealListFragment"
            app:destination="@+id/mealListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@+id/favoriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.matbakhy.presentation.MealDetails.view.MealDetailsFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">

        <action
            android:id="@+id/action_mealDetailsFragment_to_favoriteFragment"
            app:destination="@+id/favoriteFragment"
            app:popUpTo="@+id/favoriteFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mealDetailsFragment_to_mealListFragment"
            app:destination="@id/mealListFragment" />
        <argument
            android:name="meal"
            app:argType="com.example.matbakhy.data.Meals.model.Meal" />
    </fragment>

    <fragment
        android:id="@+id/mealListFragment"
        android:name="com.example.matbakhy.presentation.MealsList.views.MealListFragment"
        android:label="Meal list"
        tools:layout="@layout/fragment_meal_list">

        <action
            android:id="@+id/action_mealListFragment_to_mealDetailsFragment"
            app:destination="@+id/mealDetailsFragment" />
        <action
            android:id="@+id/action_mealListFragment_to_favoriteFragment"
            app:destination="@+id/favoriteFragment" />
        <argument
            android:name="mealList"
            app:argType="com.example.matbakhy.data.Meals.model.MealList"/>
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.matbakhy.presentation.Favorite.view.FavoriteFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_favoriteFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.matbakhy.presentation.Search.view.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_mealListFragment"
            app:destination="@id/mealListFragment" />
        <action
            android:id="@+id/action_searchFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/calenderFragment"
        android:name="com.example.matbakhy.presentation.Calender.views.CalenderFragment"
        android:label="CalenderFragment" >
        <action
            android:id="@+id/action_calenderFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
    </fragment>

</navigation>